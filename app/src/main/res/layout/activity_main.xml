<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:divider="@drawable/separator"
                android:dividerPadding="3dp"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:baselineAligned="false">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:text="@string/c1"
                    android:layout_weight="1"
                    android:id="@+id/button1"
                    android:textColor="@color/white"
                    />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:text="@string/c2"
                    android:layout_weight="1"
                    android:id="@+id/button2"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:text="@string/c3"
                    android:layout_weight="1"
                    android:id="@+id/button3"
                    android:textColor="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">
                <ImageView
                    style="@style/icon.left"

                    android:src="@drawable/ic_call_black_24dp"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72dp"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/phone_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Мобильный телефон"
                            android:inputType="phone"
                            android:text="+79.......19"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"
                            android:fontFamily="sans-serif"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_phone_in_talk_black_24dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">
                <ImageView
                    style="@style/icon.left"

                    android:src="@drawable/ic_email_black_24dp"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72dp"
                    android:orientation="vertical"
                    android:gravity="bottom"

                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/email_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="E-mail"
                            android:inputType="textEmailAddress"
                            android:text="myMail"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"
                            android:fontFamily="sans-serif"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_send_black_24dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">
                <ImageView
                    style="@style/icon.left"

                    android:src="@drawable/ic_vk_circle_24"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72dp"
                    android:orientation="vertical"
                    android:gravity="bottom"

                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/vk_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Профиль в VK"
                            android:inputType="text"
                            android:text="vk.com/id43052585"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"
                            android:fontFamily="sans-serif"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_visibility_black_24dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">
                <ImageView
                    style="@style/icon.left"

                    android:src="@drawable/ic_github_circle_24"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72dp"
                    android:orientation="vertical"
                    android:gravity="bottom"

                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/git_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Репазиторий"
                            android:inputType="text"
                            android:text="github.com/Aeksey/DevIntensive"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"
                            android:fontFamily="sans-serif"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"

                    android:src="@drawable/ic_visibility_black_24dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">
                <ImageView
                    style="@style/icon.left"

                    android:src="@drawable/ic_account_circle_black_24dp"
                    />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72dp"
                    android:orientation="vertical"
                    android:gravity="bottom"

                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginRight="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/account_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="О себе"
                            android:inputType="text"
                            android:text="@string/mytext"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"
                            android:fontFamily="sans-serif"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>




            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>

